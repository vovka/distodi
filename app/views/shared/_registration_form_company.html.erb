<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="name">
    <div class="ico">
      <%= image_tag "user_ico.png" %>
    </div>
    <%= f.text_field :first_name ,placeholder: "Company Name (official)"%>
  </div>
  <div class="errors_reg name">
    <%= resource.errors.full_messages_for(:first_name).join(',') %>
  </div>
  <div class="mail">
    <div class="ico">
      <%= image_tag "mail_ico.png" %>
    </div>
    <%= f.email_field :email, autofocus: true,placeholder: "E-mail Address" %>
  </div>
  <div class="errors_reg mail">
    <%= resource.errors.full_messages_for(:email).join(',') %>
  </div>
  <div class="password">
    <div class="ico">
      <%= image_tag "pass_ico.png" %>
    </div>
    <%= f.password_field :password, autocomplete: "off", placeholder: "Password (min 8 characters)" %>
  </div>
  <div class="errors_reg pass">
    <%= resource.errors.full_messages_for(:password).join(',') %>
  </div>
  <div class="signup_but">
    <%= f.submit "Create Free Service Book" %>
  </div>
<% end %>
