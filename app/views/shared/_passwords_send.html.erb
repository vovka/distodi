              <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
                <div class="mail">
                  <div class="ico">
                    <%= image_tag "mail_ico.png" %>
                  </div>
                  <%= f.email_field :email, autofocus: true, placeholder: t(".email") %>
                </div>
                <div class="errors_reg mail">
                  <%= resource.errors.full_messages_for(:email).join(',') %>
                </div>
                <div class="signup_but">
                  <%= f.submit t(".send") %>
                </div>
              <% end %>
