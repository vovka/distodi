<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="name">
    <%= f.text_field :first_name ,placeholder: t(".name.#{resource_name}") %>
    <%= inline_svg "user_ico.svg" %>
  </div>
  <div class="errors_reg name">
    <%= resource.errors.full_messages_for(:first_name).join(',') %>
  </div>
  <div class="mail">
    <%= f.email_field :email, autofocus: true,placeholder: t(".email") %>
    <%= inline_svg "mail_ico.svg" %>
  </div>
  <div class="errors_reg mail">
    <%= resource.errors.full_messages_for(:email).join(',') %>
  </div>
  <div class="password">
    <input autocomplete="off" placeholder="<%= t(".pass") %>" type="{{type}}" name="<%= resource_name %>[password]" id="<%= resource_name %>_password">
    <%= inline_svg "pass_ico.svg" %>
    <div class="button_box">
      <div class="show_pass" ng-mousedown="controller.showPassword()" ng-mouseup="controller.hidePassword()" ><%= t(".show") %>
      </div>
    </div>
  </div>
  <div class="errors_reg pass">
    <%= resource.errors.full_messages_for(:password).join(',') %>
  </div>
  <div class="signup_but">
    <%= f.submit t(".create.#{resource_name}") %>
  </div>
<% end %>
