<div class="form">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br/>
        <%= f.email_field :email, autofocus: true,placeholder: "mail@gmail.com" %>
      </div>

      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name ,placeholder: "Microsoft"%>
      </div>

      <div class="field">
        <%= f.label :first_name %><br/>
        <%= f.text_field :first_name,placeholder: "John" %>
      </div>

      <div class="field">
        <%= f.label :last_name %><br/>
        <%= f.text_field :last_name ,placeholder: "Connor"%>
      </div>

      <div class="field">
        <%= f.label :phone %><br/>
        <%= f.text_field :phone,placeholder: "420228228" %>
      </div>

      <div class="field">
        <%= f.label :website %><br/>
        <%= f.text_field :website,placeholder: "site.com" %>
      </div>

      <div class="field">
        <%= f.label :country %><br/>
        <%= f.text_field :country ,placeholder: "Czech republic"%>
      </div>

      <div class="field">
        <%= f.label :city %><br/>
        <%= f.text_field :city ,placeholder: "Praha"%>
      </div>

      <div class="field">
        <%= f.label :street %><br/>
        <%= f.text_field :street,placeholder: "Street" %>
      </div>

      <div class="field">
        <%= f.label :postal_code %><br/>
        <%= f.text_field :postal_code,placeholder: "8099323" %>
      </div>

      <div class="field">
        <%= f.label 'Additional field' %><br/>
        <%= f.text_field :notice %>
      </div>

      <div class="field">
        <%= f.label 'Picture' %><br>
        <%= f.hidden_field :picture_cache %>
        <%= f.file_field :picture %>
      </div>


      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
  <% end %>

  <%= render "companies/shared/links" %>
</div>