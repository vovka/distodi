<div class="iteminfo margin_left", id="itemimage">
<div style="margin-top: 8px; ">
  <%= image_tag(@item.picture_url, alt: @item.title, width: 540, height:360, id: 'itemimage' ) %></div></div>
<div>



  <p id="information_margin" class="first_name"  ><strong class="userinformation"><%= @item.title %></strong></p>
  <% @item.characteristics.each do |characteristic| %>

      <ul id="information_margin" class="userinformation" >

        <span class="userinformation"><strong><%= characteristic.attribute_kind.title %>:</strong>
        <%= characteristic.value %></span>

      </ul>

  <% end %>

  <div class="margin_left" style="padding-top: 40px; max-width: 350px;">
    <span><%= link_to 'Edit item', edit_item_path(@item), class: "buttonsuser" %><br></span>
    <span><%= link_to t(".delete_link"), item_path(@item), method: :delete,:data => {:confirm => t(".confirm_delete")}, class: "buttonsuser" %></span>
    <strong>Link for companies: </strong>
    <%= link_to show_for_company_url(token: @item.token), show_for_company_url(token: @item.token) %><br>

    <span style="font-style:italic; ">Send to your Service company an automaticity generated web-link that connect to your service and asked them to confirm</span>
  </div>

</div>
<br>
<div class="margin_left">
<h1>All services:</h1>
<% @item.services.each do |service| %>

      <div style="width: 330px; float: left; height: 230px;" >
        <p style="margin: 0 0 0 0"><strong><%= service.created_at %></strong></p>
    <div class="thumbnail_grid" id="information_margin">
      <%= service_picture_show(service) %>
    </div>
      </div>

    <strong id="information_margin"><% service.action_kinds.each do |action_kind| %>
        <%= "#{action_kind.title}" %>
    <% end %></strong>
    <p style="margin: 0 0 0 0; ">
    <% service.service_fields.each do |service_field| %>
       <%= service_field.service_kind.title %>
        <%= service_field.text %><br>

    <% end %>
      <%= link_to 'Confirm', confirm_service_path(service), method: :post, class: "buttonsuser" unless service.is_confirmed? %>
      <%= link_to 'Delete', service_path(service), method: :delete, class: "buttonsuser" unless service.is_confirmed? %>
    </p>
      <span style="float: right; margin-right: 50%" ><strong><%= number_to_currency(service.price , unit: "â‚¬") %></strong></span><br><br><br><br>

<% end %>

<p >
  <br>
<span><%= link_to 'Add Service', new_service_path(item_id: @item), class: "buttonsuser" %></span>
<span ><%= link_to 'Back to my panel', user_path(@item.user), class: "buttonsuser" %></span>
</p>
</div>
