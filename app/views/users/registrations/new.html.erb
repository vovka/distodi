<div class="sign_in_content">
  <div class="left_form">
    <div class="logo_green">
      <%= link_to image_tag('logo_green.png', alt: 'distodi.logo'), home_path %>
      <div class="exit">
        <%= link_to image_tag('cross.png', alt: 'distodi.logo'), home_path %>
      </div>
    </div>
    <div class="welcome_text">
      Sign up to create your free Service Book!
    </div>
    <div class="welcome_text_small">
      Distodi is a best way to collect all your service certificates
    </div>
    <div class="signup_form">
      <div class="wrapper">
        <div class="tabs">
          <%= link_to (new_user_registration_path) do %>
            <div class="tab user active">Client</div>
          <% end %>
          <%= link_to (new_company_registration_path) do %>
            <div class="tab">Company</div>
          <% end %>
        </div>
        <div class="tabs_content">
          <div class="tab_item">
            <div class="user_form">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class="errors_reg">
                  <%= devise_error_messages! %>
                </div>
                <div class="name">
                  <div class="ico">
                    <%= image_tag "user_ico.png" %>
                  </div>
                  <%= f.text_field :first_name ,placeholder: "Your Full Name (as in passport)"%>
                </div>
                <div class="mail">
                  <div class="ico">
                    <%= image_tag "mail_ico.png" %>
                  </div>
                  <%= f.email_field :email, autofocus: true,placeholder: "E-mail Address" %>
                </div>
                <div class="password">
                  <div class="ico">
                    <%= image_tag "pass_ico.png" %>
                  </div>
                  <%= f.password_field :password, autocomplete: "off",placeholder: "Password (min 8 characters)" %>
                </div>
                <div class="signup_but">
                  <%= f.submit "Create Free Service Book" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="signup_info">
        By creating an account, you agree to our <a href="">Terms.</a>
      </div>
      <div class="signup_info">
        Already have an account?  <%= link_to('Sign in', new_user_session_path) %>
      </div>
    </div>
  </div>

<div class="right_image">
  <%= image_tag "sign_in_img.png" %>
</div>




</div>