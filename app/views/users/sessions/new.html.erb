<div class="sign_in_content" style="background-color: white;">
  <div class="left_form">
    <div class="logo_green">
      <%= link_to image_tag('logo_green.png', alt: 'distodi.logo'), home_path %>

      <div class="exit">
        <%= link_to image_tag('cross.png', alt: 'distodi.logo'), home_path %>
      </div>
    </div>
    <div class="welcome_text">
      Hello! Welcome back.
    </div>
    <div class="welcome_text_small">
      Sign into your account here:
    </div>
    <div class="signup_form">
      <div class="wrapper">
        <div class="tabs">
          <div class="tab active user">
            Client
          </div>
          <%= link_to(new_company_session_path) do%>
            <div class="tab">
              Company
            </div>
          <% end %>
        </div>
        <div class="tabs_content">
          <div class="tab_item">
            <div class="user_form">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <p class="alert" style="color: red;"><%= alert %></p>
              <div class="mail">
                <div class="ico">
                  <%= image_tag "mail_ico.png" %>
                </div>
                <%= f.email_field :email, autofocus: true, placeholder: "E-mail Address" %>
              </div>

              <div class="password">
                <div class="ico">
                  <%= image_tag "pass_ico.png" %>
                </div>
                <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
              </div>
              <div class="signup_info_right">
                <%= link_to "Forgot password?", new_password_path(resource_name) %>
              </div>
              <div class="signup_but">
                <%= f.submit "Sign in" %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="signup_info">
        Need the Distodi account account? <%= link_to "Create free account.", new_registration_path(resource_name) %>
      </div>
    </div>
  </div>

  <div class="right_image">
    <%= image_tag "dyadya.jpg" %>
  </div>
</div>
